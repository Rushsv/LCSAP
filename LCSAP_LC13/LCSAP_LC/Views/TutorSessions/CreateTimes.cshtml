@model LCSAP_LC.Models.SessionTime
 

@{
    Layout = "~/Views/Shared/_LayoutFormat.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Times</title>
    <script src="~/Content/StudentQueue.js"></script>    
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <h4>Session Time</h4>
            <hr />
            
            <div class="col-md-offset-4 col-md-10 center-block">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@ViewBag.StudentFullName</h3>
                    </div>
                    <div class="panel-body">
                        <h4>@ViewBag.CourseDescription</h4>
                        <h4><label id="minutes">00</label>:<label id="seconds">00</label> </h4>
                        <div class="form-group">
                            @Html.HiddenFor(c => c.Tutoring_Start)
                            @Html.HiddenFor(c => c.WaitTime_Start)
                            <div class="col-md-10">
                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" name="session_active" checked="checked">
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Keep Student in Queue?</span>
                                </label>                            
                            </div>
                            <div class="col-md-offset-4 col-md-10">
                                <input type="submit" value="Complete" class="btn btn-lg  btn-primary btn-block">
                            </div>
                        </div>

                    </div>
                    <div class="panel-footer">
                        <p>
                            <small>
                                Tutor Session: @Html.DisplayFor(model => model.TutorSession_Id, new { htmlAttributes = new { @class = "form-control" } })
                                <br />
                                Student Session: @Html.DisplayFor(model => model.StudentSession_Id, new { htmlAttributes = new { @class = "form-control" } })
                            </small>
                        </p>
                    </div>
                </div>

            </div>
            <script type="text/javascript">
                            var minutesLabel = document.getElementById("minutes");
                            var secondsLabel = document.getElementById("seconds");
                            var totalSeconds = 0;
                            setInterval(setTime, 1000);
            </script>




        </div>
    }



</body>
</html>
