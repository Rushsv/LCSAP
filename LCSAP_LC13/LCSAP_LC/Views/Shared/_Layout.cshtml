<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LCSAP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LCSAP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="dropdown">
                        <a href="@Url.Action("Tutors")" class="dropdown-toggle" 
                           data-toggle="dropdown">Tutors <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Tutors", "Index", "Tutors")</li>
                            <li>@Html.ActionLink("TutorTypes", "Index", "TutorTypes")</li>
                            <li>@Html.ActionLink("Tutor Session Styles", "Index", "SessionStyles")</li>
                            <li>@Html.ActionLink("Create Messages", "Index", "MessageNotes")</li>
                            
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="@Url.Action("Students")" class="dropdown-toggle"
                           data-toggle="dropdown">Students<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Students", "Index", "Students")</li>
                            <li>@Html.ActionLink("Verify Student", "StudentVerify", "Students")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="@Url.Action("Courses")" class="dropdown-toggle"
                           data-toggle="dropdown">Catalog<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Subjects", "Index", "Subjects")</li>
                            <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
                            <li><hr /></li>
                            <li>@Html.ActionLink("Create CRNs", "Index", "CRNSections")</li>
                            

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="@Url.Action("Sessions")" class="dropdown-toggle"
                           data-toggle="dropdown">Sessions<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Terms", "Index", "Terms")</li>
                            <li>@Html.ActionLink("Areas", "Index", "Areas")</li>
                            <li>@Html.ActionLink("Session Styles", "Index", "SessionStyles")</li>
                            <li>@Html.ActionLink("Campus", "Index", "Campus")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle"
                           data-toggle="dropdown">Uploads<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="~/WebForms/UploadData.aspx">Upload Students' Info File (EnQ_Student_info.csv)</a></li>
                            <li><a href="~/WebForms/UploadData1.aspx">Upload Course Activity File (EnQ_Course_Activity.csv)</a></li>
                            <li><a href="~/WebForms/UploadData2.aspx">Upload Student Course File (EnQ_Student_course.csv)</a></li>

                        </ul>
                    </li>
                    
                    <li class="dropdown">
                        <a href="@Url.Action("Reports")" class="dropdown-toggle"
                           data-toggle="dropdown">Queries & Reports<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Student Sessions", "SessionsPerStudent", "SessionReports")</li>
                            <li>@Html.ActionLink("Cost Per Student (Detail)", "CostPerStudent", "SessionReports")</li>
                            <li>@Html.ActionLink("Tutor Sessions", "CostPerTutor", "SessionReports")</li>
                        </ul>
                    </li>


                </ul>
                <p class="nav navbar-text navbar-right">Hello, @User.Identity.Name!</p>
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Learning Commons</p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
