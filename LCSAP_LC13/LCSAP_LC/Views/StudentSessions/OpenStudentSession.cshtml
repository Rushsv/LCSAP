@model LCSAP_LC.Models.StudentSession

@{
    ViewBag.Title = "Select Course";
    Layout = "~/Views/Shared/_LayoutFormat.cshtml";
}

<h2>OpenStudentSession</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Select a Course</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <small>Select from courses below or click Start Session for Lab Support</small>
        <div class="form-group">
            @Html.LabelFor(model => model.CRN_Id, "CRN_Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CRN_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CRN_Id, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Start Session" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
