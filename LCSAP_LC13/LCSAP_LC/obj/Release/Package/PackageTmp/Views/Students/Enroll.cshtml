@model LCSAP_LC.Models.Student


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Add Class</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(s=>s.Student_Id)

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("CRN_Id", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Class" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Details", "Details", new { id = Model.Student_Id }) |
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
