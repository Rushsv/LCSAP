@model LCSAP_LC.Models.Student
@{
    ViewBag.Title = "Student Verify";
    Layout = "~/Views/Shared/_StudentSignIn.cshtml";
}
@{
    ViewBag.Title = "Student Verification";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group form-signin panel" style='margin-right: auto; margin-left: auto;text-align: center'>
            <h1 class="form headinf=g for student"><b><font color=#030513>Student Verify</font></b></h1>

            @Html.EditorFor(model => model.Student_Id, new { htmlAttributes = new { @class = "form-control", @placeholder = "AIMS ID Number", @autofocus = "autofocus" } })
            @Html.ValidationMessageFor(model => model.Student_Id, "", new { @class = "text-danger" })
            <p id="badId" class="text-danger">@ViewBag.errorMessage</p>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Verify</button>
            <h3>@ViewBag.GeneralMessage</h3>
            <p>@Html.ActionLink("Clear", "StudentVerify")</p>
        </div>
        

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


