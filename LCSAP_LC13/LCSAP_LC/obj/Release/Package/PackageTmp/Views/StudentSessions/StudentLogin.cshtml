@model LCSAP_LC.Models.Student
@{
    ViewBag.Title = "Student Login";
    Layout = "~/Views/Shared/_StudentSignIn.cshtml";
}
@{
    ViewBag.Title = "Student Login";
}

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <div class="form-group form-signin" style='margin-right: auto; margin-left: auto;text-align: center'>
                <h1 class="form headinf=g for student"><b><font color=#030513>Student Login</font></b></h1>
                <h2><i><u><font color=#030513>@ViewBag.CampusName</font></u></i></h2>
                <h2><i><font color=#030513>@ViewBag.AreaName</font></i></h2>
                <h4><i>@Html.ActionLink("Change Your Area", "SelectArea", new { campus_id = ViewBag.Campus_Id })</i></h4>
                    <small class="form-inline text-muted"><b><font color=#030513>Please enter your Aims Number</font></b></small>
                    @Html.EditorFor(model => model.Student_Id, new { htmlAttributes = new { @class = "form-control", @placeholder = "AIMS A Number", @autofocus = "autofocus", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Student_Id, "", new { @class = "alert-danger" })
                    <p id="badId" class="alert-danger">@ViewBag.errorMessage</p>

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </div>
            
       </div>
    }


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


